<?xml version="1.0" encoding="utf-8"?
<!--I just changed the ConstraintLayout to a LinearLayout because that the only thing we will be using -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Just plain SurfaceView created for later on -->
    <SurfaceView
        android:id="@+id/faceSurface"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="16dp" />

    <!-- Text identification to let user know what the seekbars will do-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="RGB Color Change"
        android:textStyle="bold|italic"
        android:paddingBottom="8dp" />

    <!--SeekBars Layouts | Will contain 3 different ones for each color-->

    <!--Seek for Red-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Red" />

        <SeekBar
            android:id="@+id/redSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="255" />
    </LinearLayout>

    <!--Seek for Green-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Green" />

        <SeekBar
            android:id="@+id/greenSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="255" />
    </LinearLayout>

    <!--Seek for Blue-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Blue" />

        <SeekBar
            android:id="@+id/blueSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="255" />
    </LinearLayout>

    <!--Layout for Hair Style-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!--Label for Hair Style Spinner-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hair Style"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!--Spinner for the Hair Style-->
        <Spinner
            android:id="@+id/hairSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!--Layout for the RadioGroud-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- RedioGroup itself with the options asked-->
        <RadioGroup
            android:id="@+id/faceRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/hairRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hair" />

            <RadioButton
                android:id="@+id/eyeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyes"
                android:checked="true"
                android:layout_marginStart="16dp" />

            <RadioButton
                android:id="@+id/skinRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skin"
                android:layout_marginStart="16dp" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>